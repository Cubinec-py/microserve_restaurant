{
  "version": 2,
  "builds": [
    {
      "src": "restaurant/core/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.8" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "restaurant/staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/restaurant/static/(.*)",
      "dest": "/restaurant/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "restaurant/core/wsgi.py"
    }
  ]
}
